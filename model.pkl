import pandas as pd
from sklearn.linear_model import LinearRegression
import joblib

# ডেটা লোড করা
data = pd.read_csv('data.csv')

X = data[['hours']]
y = data['score']

# মডেল তৈরি
model = LinearRegression()
model.fit(X, y)

# মডেল সংরক্ষণ
joblib.dump(model, 'model.pkl')

print("✅ Model trained and saved successfully!")
